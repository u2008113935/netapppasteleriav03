<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="apppasteleriav03.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:apppasteleriav03.Views"
    Title="Delicia"
    FlyoutBehavior="Flyout"
    Shell.TabBarBackgroundColor="{StaticResource PrimaryColor}"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#E1BEE7">

    <!-- Toolbar - botones de la esquina superior derecha -->
    <Shell.ToolbarItems>
        <ToolbarItem IconImageSource="icon_profile.png" 
                     Order ="Primary"
                     Priority="0"
                     Clicked="OnEditProfileClicked"/>
        <ToolbarItem Text="Login" 
                     Order ="Primary"
                     Priority="1"
                     Clicked="OnLoginClicked"/>
    </Shell.ToolbarItems>

    <!-- FlyouHeader con avatar, nombre y boton para editar el perfil -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource PrimaryColor}" Padding="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Source="avatar_placeholder.png"
                   HeightRequest="56" 
                   WidthRequest="56"
                   Aspect="AspectFill"
                   Grid.Column="0"
                   VerticalOptions="Center">
                <Image.Clip>
                    <EllipseGeometry Center="28,28" RadiusX="28" RadiusY="28"/>
                    </Image. Clip>
            </Image>

            <StackLayout Grid.Column="1" 
                         VerticalOptions="Center" 
                         Spacing="2"
                         Margin="12,0,0,0">

                <Label Text="{Binding CurrentProfile.FullName}" 
                       TextColor="White" 
                       FontAttributes="Bold"
                       FontSize="16"/>
                <Label Text="{Binding CurrentProfile.Email}"
                       TextColor="White"
                       FontSize="12"
                       Opacity="0.9"/>          
            </StackLayout>

            <ImageButton Grid.Column="2"
                         Source="icon_edit.png"
                         BackgroundColor="Transparent"
                         HeightRequest="32"
                         WidthRequest="32"
                         Clicked="OnEditProfileClicked"
                         VerticalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>


    <!-- TABBAR - Pestañas principales en la parte inferior -->
    <TabBar>

        <!-- Pestaña Catálogo -->
        <Tab Title="Catálogo" Icon="icon_home.png">
            <ShellContent Route="catalog" 
                          ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <!-- Pestaña Carrito -->
        <Tab Title="Carrito" Icon="icon_cart.png">
            <ShellContent Route="cart" 
                          ContentTemplate="{DataTemplate local:CartPage}" />
        </Tab>

        <!-- Pestaña Pedidos -->
        <Tab Title="Pedidos" Icon="icon_orders.png">
            <ShellContent Route="orders" 
                          ContentTemplate="{DataTemplate local:OrdersPage}" />
        </Tab>

    </TabBar>

    <!-- FLYOUT - Opciones adicionales en el menú lateral -->
    <FlyoutItem Title="Mi Perfil" 
                Icon="icon_profile. png"
                Route="profile">
        <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Favoritos" 
                Icon="icon_favorite.png"
                Route="favorites">
        <ShellContent ContentTemplate="{DataTemplate local:FavoritesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Configuración" 
                Icon="icon_settings.png"
                Route="settings">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

    <!-- Sección del Flyout para opciones menos frecuentes -->
    <MenuItem Text="Acerca de" 
              IconImageSource="icon_info.png"
              Clicked="OnAboutClicked"/>

    <MenuItem Text="Cerrar sesión" 
              IconImageSource="icon_logout.png"
              Clicked="OnLogoutClicked"/>



</Shell>
